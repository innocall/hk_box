<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_bg"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width= "0px"
        android:layout_height= "0px"
        android:focusable= "true"
        android:focusableInTouchMode="true" >
    </LinearLayout >


    <LinearLayout
        android:id="@+id/ll_account_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dim_60_dp"
        android:layout_marginRight="@dimen/dim_60_dp"
        android:layout_marginTop="@dimen/dim_80_dp"
        android:clickable="true"
        android:focusable="true"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="@dimen/dim_100_dp"
            android:layout_height="@dimen/dim_80_dp"
            android:scaleType="fitCenter"
            android:background="@drawable/left_arrow" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dim_05_dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_account_01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dip"
                android:text="账户"
                android:textColor="#ffffff"
                android:textSize="@dimen/dim_25_sp" />

            <TextView
                android:id="@+id/tv_account_02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dip"
                android:text="账户信息"
                android:textColor="#ffffff"
                android:textSize="@dimen/dim_30_sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/dim_80_dp"
        android:layout_marginLeft="@dimen/dim_60_dp"
        android:layout_marginRight="@dimen/dim_60_dp"
        android:layout_marginTop="@dimen/dim_20_dp"
        android:background="@drawable/account_bg"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dim_30_dp"
            android:layout_marginTop="@dimen/dim_20_dp"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dip"
                android:text="柠檬账号:"
                android:textColor="#ffffff"
                android:textSize="@dimen/dim_30_sp" />

            <TextView
                android:id="@+id/tv_account_info_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dim_10_dp"
                android:layout_marginTop="4dip"
                android:text="柠檬盒子"
                android:textColor="#ffffff"
                android:textSize="@dimen/dim_30_sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dim_30_dp"
            android:layout_marginTop="@dimen/dim_20_dp"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dip"
                android:text="客服联系电话:"
                android:textColor="#ffffff"
                android:textSize="@dimen/dim_30_sp" />

            <TextView
                android:id="@+id/tv_account_info_telphone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dim_10_dp"
                android:layout_marginTop="4dip"
                android:text="138333222333"
                android:textColor="#ffffff"
                android:textSize="@dimen/dim_30_sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dim_30_dp"
            android:layout_marginTop="@dimen/dim_20_dp"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dip"
                android:text="账户激活日期:"
                android:textColor="#ffffff"
                android:textSize="@dimen/dim_30_sp" />

            <TextView
                android:id="@+id/tv_account_info_regDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dim_10_dp"
                android:layout_marginTop="4dip"
                android:text="2013-08-21"
                android:textColor="#ffffff"
                android:textSize="@dimen/dim_30_sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>